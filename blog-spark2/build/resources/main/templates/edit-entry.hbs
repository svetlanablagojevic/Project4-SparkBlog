{{#partial "content"}}
    <div class="edit-entry">
        <h2>Edit Entry</h2>
        <form action="edit/save" method="post">
            <label for="title">Title</label>
            <input type="text" name="title" value="{{entry.title}}"><br>
            <label for="entry">Entry</label>
            <textarea rows="5" name="entry">{{entry.text}}</textarea>
            <input type="submit" value="Save Entry" class="button">
            <a href="/index/{{entry.slug}}" class="button button-secondary">Cancel</a>
            <a href="delete" class="button button-warning">Delete Entry</a>
        </form>
    </div>
{{/partial}}

{{> base.hbs}}